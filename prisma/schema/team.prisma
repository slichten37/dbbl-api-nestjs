model Team {
  id           String   @id @default(uuid())
  name         String
  createdAtUtc DateTime @default(now())
  updatedAtUtc DateTime @updatedAt

  bowlers      Bowler[]
  seasons      Season[]
  homeMatches  Match[]  @relation("MatchHomeTeam")
  awayMatches  Match[]  @relation("MatchAwayTeam")
  wonMatches          Match[]             @relation("MatchWinner")
  matchSubstitutions   MatchSubstitution[]
}
