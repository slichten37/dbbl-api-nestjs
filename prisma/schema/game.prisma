model Game {
  id           String   @id @default(uuid())
  gameNumber   Int
  createdAtUtc DateTime @default(now())
  updatedAtUtc DateTime @updatedAt

  matchId String
  match   Match  @relation(fields: [matchId], references: [id])

  homeTeamScore   Int?
  awayTeamScore   Int?
  homeTeamStrikes Int?
  awayTeamStrikes Int?
  homeTeamPoints  Int?
  awayTeamPoints  Int?

  frames Frame[]

  @@unique([matchId, gameNumber])
}
