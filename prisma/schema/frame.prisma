model Frame {
  id           String   @id @default(uuid())
  frameNumber  Int
  ball1Score   Int
  ball2Score   Int?
  ball3Score   Int?
  isBall1Split Boolean  @default(false)
  createdAtUtc DateTime @default(now())
  updatedAtUtc DateTime @updatedAt

  gameId String
  game   Game   @relation(fields: [gameId], references: [id])

  bowlerId String
  bowler   Bowler @relation(fields: [bowlerId], references: [id])

  @@unique([gameId, bowlerId, frameNumber])
}
