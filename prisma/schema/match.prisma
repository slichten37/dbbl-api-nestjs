model Match {
  id           String   @id @default(uuid())
  week         Int
  createdAtUtc DateTime @default(now())
  updatedAtUtc DateTime @updatedAt

  homeTeamId String
  homeTeam   Team   @relation("MatchHomeTeam", fields: [homeTeamId], references: [id])

  awayTeamId String
  awayTeam   Team   @relation("MatchAwayTeam", fields: [awayTeamId], references: [id])

  seasonId String
  season   Season @relation(fields: [seasonId], references: [id])

  winningTeamId String?
  winningTeam   Team?   @relation("MatchWinner", fields: [winningTeamId], references: [id])

  homeTeamPoints Int?
  awayTeamPoints Int?

  games         Game[]
  substitutions  MatchSubstitution[]
}
